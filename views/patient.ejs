<!DOCTYPE html>
<html >
<head>
    <title>BMI Calculator</title>
    <style>
        body{
            background-color: rgb(235, 235, 235);
        }
        *{
            padding: 0;
            margin: 0;
            font-family: Century Gothic;
        }
        form{
            margin: auto;
            display: block;
            width: 500px;
            margin-top: 100px;
          
        }
        input{
            border: 1px solid gray;
            border-radius: 3px;
            margin-bottom: 4px;
            height: 35px;
            width: 500px;
            padding: 0px 2px;
            box-sizing: border-box;
           
        }
        button{
            width: 100px;
            padding: 10px 0px;
            background-color: rgb(9, 127, 223);
            border: none;
            border-radius: 3px;
            color:white;
            cursor: pointer;
            box-sizing: border-box;

        }
        h1{
            margin-top: 200px;
            text-align: center;
            color: rgb(31, 31, 31);
            font-size: 50px;
        }
        table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
    </style>
</head>
<body>
    <h1>Add Patient</h1>
    
    <form  action="/patient" method="POST">
        <input type="text" name="name" id="name" placeholder="Name">
        <br>
        <input type="text" name="phone_number" id="phone_number" placeholder="Phone Number">
        <br>
        <input type="text" name="gender" id="gender" placeholder="gender">
        <br>
        <input type="text" name="social_status" id="social_status" placeholder="social_status">
        <br>
        <input type="text" name="location" id="location" placeholder="location">
        <br>
        <input type="date" name="birth_date" id="birth_date" placeholder="birth_date">
        <br>
        <input type="text" name="email" id="email" placeholder="email">
        <br>
        <button type="submit" class="btn">Add pationt</button>
        
</form>

<table>
<thead>
    <tr>

      
      <th>name</th>
      <th>phone_number</th>
      <th>gender</th>
      <th>social_status</th>

      <th>location</th>
      <th>birth_date</th>
      <th>email</th>
    </tr>
  </thead>
  <tbody>
    <% patients.forEach(patient => { %>
        <tr>
            <td>
                <%= patient.name %> 
            </td>
            <td>
                <%= patient.phone_number %> 
            </td>
            <td>
                <%= patient.gender %> 
            </td>
            <td>
                <%= patient.social_status %> 
            </td>
            <td>
                <%= patient.location %> 
            </td>
            <td>
                <%= patient.birth_date %> 
            </td>
            <td>
                <%= patient.email %> 
            </td>
            <td>
            <form action="/patient/<%= patient.id %>?_method=DELETE" method="POST" style="width: 200px; height: 30px;">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
           
        </tr>
        <% }) %>
  </tbody>
</table>
</div>
</body>
</html>